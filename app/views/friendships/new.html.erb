<div class="wrapper">
  <div class="search-home">
    <%= form_tag new_friendship_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class:"form-control",
      placeholder: "Search for a friend"
      %>
      <%= button_tag :submit do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>

  <div class="display-friends">
    <% if @users.nil? %>
      <div style="margin-top:15px;margin-bottom:15px">
        <div class="line"></div>
      </div>
    <% else %>
      <% @users.each do |user| %>
        <div style="margin-top:15px;margin-bottom:15px">
          <div class="line"></div>
        </div>
        <div class="users-info">
          <div class="profile-photo">
            <%= cl_image_tag user.photo, width: 140, height: 140, crop: :thumb, gravity: :face, class:"avatar" %>
          </div>
          <div class="name">
            <%= user.first_name %>
            <%= user.last_name %>
          </div>
          <div class="follow-button">
            <%= link_to "Follow", user_friendships_path(user), method: :post%>
          </div>

        </div>
      <% end %>
    <% end %>
  </div>
</div>
