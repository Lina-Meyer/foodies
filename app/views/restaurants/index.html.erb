<div class='wrapper'>
  <div class="tab-slider--nav">
    <ul class="tab-slider--tabs">
      <li class="tab-slider--trigger active" rel="tab1">List</li>
      <li class="tab-slider--trigger" rel="tab2">Map</li>
    </ul>
  </div>
  <div class="tab-slider--container">
    <div id="tab1" class="tab-slider--body">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div id="restaurants">
            <% @restaurants.each do |restaurant| %>
              <div class="restaurant-flex">
                <div class="image-index">
                  <% if restaurant.ratings.first.photo == nil  %>
                    <%= image_tag("munich.jpg") %>
                  <% else %>
                    <%= restaurant.ratings.first.photo %>
                  <% end %>
                </div>
                <div class="text-index">
                  <div class="center-index-text">
                    <h4><%= restaurant.name %></h4>
                    <p><%= restaurant.city %></p>
                  </div>
                  <div class="stars-index">
                    <p><i class="fas fa-star"></i> <%= restaurant.ratings.first.stars.to_f %></p>
                  </div>
                  <div class="avatar-index">
                    <% restaurant.users.each do |user| %>
                      <%= cl_image_tag user.photo_url, width: 140, height: 140, crop: :thumb, gravity: :face, class:"avatar"   %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div id="tab2" class="tab-slider--body">
      <h2>Google Maps</h2>
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
      ></div>
    </div>
  </div>
</div>
