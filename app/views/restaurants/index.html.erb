<div class='wrapper'>
  <div class="tab-slider--nav">
    <ul class="tab-slider--tabs">
      <li class="tab-slider--trigger active" rel="tab1">List</li>
      <li class="tab-slider--trigger" rel="tab2">Map</li>
    </ul>
  </div>

  <div class="tab-slider--container">
    <div id="tab1" class="tab-slider--body">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div id="restaurants">
            <% @restaurants.each do |restaurant| %>
              <h4><%= restaurant.name %></h4>
              <p><%= restaurant.city %></p>
              <% restaurant.users.each do |user| %>
                <p><%= user.email %></p>
                <%= cl_image_tag user.photo_url, width: 150, height: 150, crop: :thumb, gravity: :face, class:"avatar"   %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>


    <div id="tab2" class="tab-slider--body">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
      ></div>
    </div>
  </div>
</div>
